@model MVCGarage.ViewModels.Garage.SelectAVehicleVM

@{
    ViewBag.Title = "Check In A Vehicle";
}
<div class="header jumbotron">
    <h1>Please select a vehicle to check in</h1>
    <hr />
    <p>This is where you select the vehicle you would like to check in</p>
</div>

<p style="font-size: 3em; text-align: center; color: white;">
    @Html.ActionLink("Add a new vehicle",
                     "Create",
                     "Vehicles",
                     new MVCGarage.ViewModels.Vehicles.CreateVehicleVM
                     {
                         OriginActionName = "CheckInVehicle",
                         OriginControllerName = "Garage",
                     },
                     null)
</p>

@using (@Html.BeginForm())
{
    @Html.Partial("_SelectAVehiclePartial", Model)
}
