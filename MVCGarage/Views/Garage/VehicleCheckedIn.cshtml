@model MVCGarage.ViewModels.Garage.VehicleCheckedInVM

@{
    ViewBag.Title = "Check in a vehicle";
}

<div class="header">
    <h2>The following vehicle has been checked in:</h2>
</div>

<div class="about-body-text" style="color: white; margin-top: 10em; text-align: center;">
    <hr />
    <h4>Vehicle</h4>
    <div class="index-table">
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.RegistrationPlate)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.Owner)
                </th>

                <th>
            @Html.DisplayNameFor(model => model.Vehicle.VehicleType)
                </th>

                <th>
                    @Html.DisplayName("Check in time")
                </th>
            </tr>

            <tr>
                <td>
            @Html.DisplayFor(model => model.Vehicle.RegistrationPlate)
                </td>

                <td>
            @Html.DisplayFor(model => model.Vehicle.Owner)
                </td>

                <td>
                    @Html.DisplayName(MVCGarage.Models.EnumHelper.GetDescriptionAttr(Model.Vehicle.VehicleType))
                </td>

                <td>
                    @Html.DisplayFor(model => model.Vehicle.CheckInTime)
                </td>
            </tr>
        </table>
</div>

    <hr />
    <h4>Parking Spot</h4>
    <div class="index-table">
        <table>
            <tr>
                <th>
            @Html.DisplayNameFor(model => model.ParkingSpot.Label)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParkingSpot.Fee)
                </th>
            </tr>
            <tr>
                <td>
            @Html.DisplayFor(model => model.ParkingSpot.Label)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ParkingSpot.Fee)/min.
                </td>
            </tr>
        </table>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "DisplayAllVehicles", "Garage")
</p>
